<Window x:Class="FUNewsClientWpf.Views.NewsDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="News Detail" Height="600" Width="900" WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <Border Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header: Title + Status badge + Close -->
                <DockPanel Grid.Row="0" LastChildFill="False">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,0,8,0">
                        <TextBlock x:Name="TitleText"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"/>
                        <Border x:Name="StatusBadgeBorder"
                                Margin="10,0,0,0"
                                Padding="8,3"
                                CornerRadius="12"
                                Background="{StaticResource BorderBrush}"
                                VerticalAlignment="Center">
                            <TextBlock x:Name="StatusText"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrush}"
                                       TextWrapping="NoWrap"/>
                        </Border>
                    </StackPanel>

                    <Button Content="Close"
                            Width="100"
                            Click="Close_Click"
                            Style="{StaticResource PrimaryButton}"
                            DockPanel.Dock="Right"/>
                </DockPanel>

                <!-- Headline -->
                <TextBlock x:Name="HeadlineText"
                           Grid.Row="1"
                           Margin="0,10,0,0"
                           Foreground="{StaticResource GrayTextBrush}"
                           FontStyle="Italic"
                           TextWrapping="Wrap"/>

                <!-- Meta grid (removed separator above) -->
                <Grid Grid.Row="2" Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="249"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 0 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Category" Foreground="{StaticResource GrayTextBrush}" />
                    <TextBlock x:Name="CategoryText" Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Source" Foreground="{StaticResource GrayTextBrush}" />
                    <TextBlock x:Name="SourceText" Grid.Row="0" Grid.Column="3"/>

                    <!-- Row 1 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Created" Foreground="{StaticResource GrayTextBrush}" Margin="0,6,0,0"/>
                    <TextBlock x:Name="CreatedText" Grid.Row="1" Grid.Column="1" Margin="0,6,0,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Modified" Foreground="{StaticResource GrayTextBrush}" Margin="0,6,0,0"/>
                    <TextBlock x:Name="ModifiedText" Grid.Row="1" Grid.Column="3" Margin="0,6,0,0"/>

                    <!-- Row 2 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Created By" Foreground="{StaticResource GrayTextBrush}" Margin="0,6,0,0"/>
                    <TextBlock x:Name="CreatedByText" Grid.Row="2" Grid.Column="1" Margin="0,6,0,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Updated By" Foreground="{StaticResource GrayTextBrush}" Margin="0,6,0,0"/>
                    <TextBlock x:Name="UpdatedByText" Grid.Row="2" Grid.Column="3" Margin="0,6,0,0"/>

                    <!-- Row 3 -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Tags" Foreground="{StaticResource GrayTextBrush}" Margin="0,6,0,0"/>
                    <TextBlock x:Name="TagsText" Grid.Row="3" Grid.Column="1" Margin="0,6,0,0" Grid.ColumnSpan="3" TextWrapping="Wrap"/>
                </Grid>

                <!-- Content (removed overlapping separator in same row) -->
                <GroupBox Grid.Row="3" Header="Content" Margin="0,12,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="ContentText"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"
                                   LineHeight="22"/>
                    </ScrollViewer>
                </GroupBox>

                <!-- Footer space -->
                <Grid Grid.Row="4"/>
            </Grid>
        </Border>
    </Grid>
</Window>