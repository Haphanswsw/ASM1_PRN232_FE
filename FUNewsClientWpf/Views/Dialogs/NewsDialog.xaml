<Window x:Class="FUNewsClientWpf.Views.Dialogs.NewsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="News" Height="520" Width="640" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title with placeholder -->
        <Grid Grid.Row="0">
            <TextBox x:Name="TitleBox"/>
            <TextBlock Text="Title"
                       Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                       Margin="6,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=TitleBox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <!-- Headline with placeholder -->
        <Grid Grid.Row="1" Margin="0,6,0,0">
            <TextBox x:Name="HeadlineBox"/>
            <TextBlock Text="Headline (required)"
                       Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                       Margin="6,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=HeadlineBox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <Grid Grid.Row="2" Margin="0,6,0,0">
            <TextBox x:Name="SourceBox"/>
            <TextBlock Text="Source"
                       Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                       Margin="6,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=SourceBox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <TextBox x:Name="ContentBox" Grid.Row="3" Margin="0,6,0,0"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 Height="220" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,6,0,0">
            <ComboBox x:Name="CategoryBox" Width="220"
                      DisplayMemberPath="CategoryName" SelectedValuePath="CategoryId"/>
            <CheckBox x:Name="StatusBox" Content="Active" Margin="12,0,0,0" IsChecked="True"/>
        </StackPanel>

        <DockPanel Grid.Row="5" Margin="0,10,0,0">
            <GroupBox Header="Tags" DockPanel.Dock="Left" Width="260">
                <ListBox x:Name="TagsList" SelectionMode="Extended"
                         DisplayMemberPath="TagName" SelectedValuePath="TagId"/>
            </GroupBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Content="OK" Width="90" Margin="0,0,8,0" Click="Ok_Click"/>
                <Button Content="Cancel" Width="90" Click="Cancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>