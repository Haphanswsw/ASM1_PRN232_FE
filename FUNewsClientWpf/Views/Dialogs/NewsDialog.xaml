<Window x:Class="FUNewsClientWpf.Views.Dialogs.NewsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="News" Height="540" Width="660" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="TitleBox" Grid.Row="0" Style="{StaticResource WatermarkTextBox}" Tag="Title" Margin="0,0,0,8"/>
        <TextBox x:Name="HeadlineBox" Grid.Row="1" Style="{StaticResource WatermarkTextBox}" Tag="Headline (required)" Margin="0,0,0,8"/>
        <TextBox x:Name="SourceBox" Grid.Row="2" Style="{StaticResource WatermarkTextBox}" Tag="Source" Margin="0,0,0,8"/>

        <TextBox x:Name="ContentBox" Grid.Row="3" Margin="0,0,0,8"
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 Height="220" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,4,0,0">
            <ComboBox x:Name="CategoryBox" Width="240"
                      DisplayMemberPath="CategoryName" SelectedValuePath="CategoryId"/>
            <CheckBox x:Name="StatusBox" Content="Active" Margin="12,0,0,0" IsChecked="True"/>
        </StackPanel>

        <DockPanel Grid.Row="5" Margin="0,12,0,0">
            <GroupBox Header="Tags" DockPanel.Dock="Left" Width="280">
                <ListBox x:Name="TagsList" SelectionMode="Extended"
                         DisplayMemberPath="TagName" SelectedValuePath="TagId"/>
            </GroupBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Content="OK" Width="100" Margin="0,0,8,0" Click="Ok_Click" Style="{StaticResource PrimaryButton}"/>
                <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>